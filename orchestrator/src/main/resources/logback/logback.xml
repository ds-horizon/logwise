<configuration scan="true" scanPeriod="10 seconds">
  <property name="log.directory.path" value="/opt/logs"/>
  <property name="artifactId" value="log-central-orchestrator"/>
  <property name="log.file.name" value="${artifactId}.log"/>
  <property name="log.push.file.name" value="${log.push.file.name:-${artifactId}_push.log}"/>
  <property scope="context" name="HOSTNAME" value="${HOSTNAME}"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.directory.path}/${log.file.name}</file>
    <append>true</append>
    <encoder class="com.dream11.logger.encoder.D11JsonEncoder"/>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${log.directory.path}/archived/${artifactId}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>512MB</maxFileSize>
      <maxHistory>7</maxHistory>
      <totalSizeCap>15GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FILE"/>
    <includeCallerData>${includeCallerData:-false}</includeCallerData>
    <neverBlock>true</neverBlock>
  </appender>

  <!-- Only writes logs with a particular marker-->
  <appender name="PUSH_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.directory.path}/${log.push.file.name}</file>
    <append>true</append>
    <encoder class="com.dream11.logger.encoder.D11JsonEncoder"/>
    <filter class="com.dream11.logger.filter.D11Filter"/>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${log.directory.path}/archived/${artifactId}_push.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>512MB</maxFileSize>
      <maxHistory>7</maxHistory>
      <totalSizeCap>15GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="PUSH_ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="PUSH_FILE"/>
    <includeCallerData>${includeCallerData:-false}</includeCallerData>
    <neverBlock>true</neverBlock>
  </appender>

  <logger name="com.logwise" level="info"/>
  <logger name="io.netty" level="info"/>
  <logger name="org.jboss.resteasy" level="info"/>
  <logger name="software.amazon.awssdk" level="warn"/>
  <logger name="io.grpc.netty" level="warn"/>
  <logger name="org.apache.kafka" level="warn"/>

  <root level="info">
    <appender-ref ref="ASYNC_FILE"/>
    <appender-ref ref="PUSH_ASYNC_FILE"/>
  </root>

</configuration>