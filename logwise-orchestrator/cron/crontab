# Every 1 minute - POST
*/1 * * * * curl -fsS --retry 3 --retry-connrefused --max-time 15 \
  -X POST -H "Content-Type: application/json" -H "X-Tenant-Name: dream11" \
  http://app:8080/api/v1/component/sync || echo "$(date -Is) A failed" >&2

